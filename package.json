{
  "name": "messenger",
  "private": true,
  "version": "0.0.1",
  "engines": {
    "npm": ">=9.0.0",
    "node": ">=18.6.0"
  },
  "scripts": {
    "dev": "vite && tsc --noEmit --watch",
    "build": " tsc --noEmit && vite build && cp src/server/server.js build",
    "preview": "vite preview",
    "start": "npm run build && node build/server.js",
    "lisn:eslint": "eslint src",
    "eslint:fix": "eslint --fix src",
    "lint:stylelint": "stylelint \"**/*.scss\"",
    "stylelint:fix": "stylelint \"**/*.scss\" --fix",
    "lint:all": "eslint src && stylelint \"**/*.scss\"",
    "test": "mocha --require ts-node/register --require ./mochaSetup.cjs './src/**/*.test.ts'",
    "validate": "npm-run-all --parallel test lint:all",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@sinonjs/referee-sinon": "^11.0.0",
    "@types/chai": "^4.3.5",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.15",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "chai": "^4.3.7",
    "eslint": "^8.43.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.62.1",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "stylelint": "^15.8.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vite": "^4.4.8",
    "vite-plugin-checker": "^0.6.1",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "handlebars": "^4.7.7",
    "helmet": "^7.0.0",
    "nanoid": "^3.3.6",
    "tsconfig-paths": "^4.2.0"
  }
}
